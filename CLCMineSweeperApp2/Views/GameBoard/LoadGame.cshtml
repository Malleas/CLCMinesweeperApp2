
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoadGame</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        input[type=text], input[type=number], select, textarea {
        }

        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 50%;
            padding: 12px;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

            button:hover {
                background-color: #45a049;
            }

        .container {
            border-radius: 5px;
            background-color: #ecf0e9;
            padding: 20px;
        }

        .nav-header {
            background-color: #21401f;
            color: white;
        }

        .container signin {
            padding: 16px;
            background-color: white;
        }
    </style>
</head>
<body>
    <div class="container" align="center">
        <div class="form-horizontal">
            <h2>Select either New game or load existing unfinished game.</h2>
            @using (Html.BeginForm("LoadGameClick", "GameBoard", FormMethod.Post))
            {
                <button type="submit" name="gameTypeBtn" value="0">New Game</button>
                <button type="submit" name="gameTypeBtn" value="1">Load Game</button>
            }


        </div>
    </div>
</body>
</html>

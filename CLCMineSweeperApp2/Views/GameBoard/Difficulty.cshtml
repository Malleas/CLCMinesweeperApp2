@model CLCMinesweeperApp.Models.Board

@{
    /**/

    ViewBag.Title = "Index";
}

<!DOCTYPE html>




<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>


    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        input[type=text], input[type=number], select, textarea {
    
        }

        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 50%;
            padding: 12px;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

            button:hover {
                background-color: #45a049;
            }

        .container {
            border-radius: 5px;
            background-color: #ecf0e9;
            padding: 20px;
        }

        .nav-header {
            background-color: #21401f;
            color: white;
        }

        .container signin {
            padding: 16px;
            background-color: white;
        }
    </style>
</head>
<body>
    <div class = "container" align="center">
        <div class=" form-horizontal">
            <h2>To begin playing, select a difficulty!</h2>
            <hr>
            @using (Html.BeginForm("DifficultyClick", "GameBoard", FormMethod.Post))
            {
                <button type="submit" name="difficulty" value="1">Easy</button><br />

                <button type="submit" name="difficulty" value="2">Moderate</button><br />

                <button type="submit" name="difficulty" value="3">Hard</button>

            }
        </div>
    </div>
</body>
</html>

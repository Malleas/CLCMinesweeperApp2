@model CLCMinesweeperApp.Models.Board


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


    AjaxOptions ajaxOptions = new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "Gameboard"

    };
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    input[type=text], input[type=number], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=submit] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    .container {
        border-radius: 5px;
        background-color: #ecf0e9;
        padding: 20px;
    }

    .nav-header {
        background-color: #21401f;
        color: white;
    }

    .container signin {
        padding: 16px;
        background-color: white;
    }
</style>
<!DOCTYPE html>

<html>
<head>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>GameBoard</title>
    <style>
        .game-button {
            background-color: lightblue;
            border: none;
            width: 50px;
            height: 50px;
            text-align: center;
            font-weight: bold;
            font-size: 16px;
            margin: 4px 2px
        }

        .image {
            width: 30px;
            height: 30px
        }
    </style>



    <script>
        var counter = 0;

        $(document).ready(function () {
            $(".game-button").click(function(){
                counter++;

                $("#clickCounter").text(counter);
            })
        }

    </script>






    
</head>
<body>



 
    <div align="center" class="Gameboard" id="Gameboard">
        @using (Ajax.BeginForm("OnClick", "GameBoard", ajaxOptions))
        {


            <table cellpadding="0" cellspacing="0" width="12" border="0">

                @{


                    for (int i = 0; i < 12; i++)
                    {
                        <tr>
                            @for (int j = 0; j < 12; j++)
                            {

                                <td>


                                    <button class="game-button" align="center" onclick="start(); upDateClicks();" type="submit" name="button" value="@Model.Grid[i, j].Row.ToString()|@Model.Grid[i, j].Column.ToString()">


                                        @if (Model.Grid[i, j].Flag == true)
                                        {
                                            <img class="image" align="middle" src="~/Images/flag_icon.png" />
                                        }

                                        else if (Model.Grid[i, j].Visited && Model.Grid[i, j].Live)
                                        {
                                            <!--Need to add an ending phase shoulda  bomb get clicked on.-->

                                            <img class="image" align="middle" src="~/Images/minesweeper bomb.png" />


                                            // @Html.ViewBag("~/Views/Gameboard/Difficulty.cshtml");

                                        }
                                        else if (Model.Grid[i, j].Visited)
                                        {
                                            if (Model.Grid[i, j].Neighbors > 0)
                                            {
                                                @Model.Grid[i, j].Neighbors.ToString();
                                            }

                                            <!--Winning condition needs to be added-->
                                        }


                                    </button>


                                </td>


                            }
                        </tr>

                    }






                }
            </table>
        }
    </div>

    @{

        if (CLCMinesweeperApp.Models.Board.GameOver == true)
        {
            <div>
                @Html.Partial("~/Views/GameBoard/_GameEnd.cshtml")
            </div>
        }
    }
</body>
</html>